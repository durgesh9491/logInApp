<%= form_for comment, url: micropost_comments_path(comment.micropost.id), html: { class: "new_comment_form" }, remote: true do |f| %>
  <div class="dialogbox">
    <div class="body">
      <span class="tip tip-left"></span>
      <div class="message">
        <span>
           <%= f.hidden_field :micropost_id %>
           <%= f.text_area :content, placeholder: "Compose new comment..."%>
           <%= f.submit "Add comment", class: "btn btn-comment btn-primary" %>
        </span>
      </div>
    </div>
<% end %>

